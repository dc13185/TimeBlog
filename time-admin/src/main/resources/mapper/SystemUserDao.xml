<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.TimeSystemUserDao">

    <resultMap type="com.timeblog.business.domain.SysUser" id="TimeSystemUserMap">
        <result property="sysUserId" column="sys_user_id" jdbcType="INTEGER"/>
        <result property="loginName" column="login_name" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="loginIp" column="login_ip" jdbcType="VARCHAR"/>
        <result property="loginDate" column="login_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryUser" resultMap="TimeSystemUserMap">
        select
          sys_user_id, login_name, user_name, email, password, login_ip, login_date
        from timeblog.time_system_user
        <where>
            <if test="sysUserId != null">
                and sys_user_id = #{sysUserId}
            </if>
            <if test="loginName != null and loginName != ''">
                and login_name = #{loginName}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TimeSystemUserMap">
        select
          sys_user_id, login_name, user_name, email, password, login_ip, login_date
        from timeblog.time_system_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryUser" resultMap="TimeSystemUserMap">
        select
          sys_user_id, login_name, user_name, email, password, login_ip, login_date
        from timeblog.time_system_user
        <where>
            <if test="sysUserId != null">
                and sys_user_id = #{sysUserId}
            </if>
            <if test="loginName != null and loginName != ''">
                and login_name = #{loginName}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="loginIp != null and loginIp != ''">
                and login_ip = #{loginIp}
            </if>
            <if test="loginDate != null">
                and login_date = #{loginDate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="sysUserId" useGeneratedKeys="true">
        insert into timeblog.time_system_user(login_name, user_name, email, password, login_ip, login_date)
        values (#{loginName}, #{userName}, #{email}, #{password}, #{loginIp}, #{loginDate})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update timeblog.time_system_user
        <set>
            <if test="loginName != null and loginName != ''">
                login_name = #{loginName},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="loginIp != null and loginIp != ''">
                login_ip = #{loginIp},
            </if>
            <if test="loginDate != null">
                login_date = #{loginDate},
            </if>
        </set>
        where sys_user_id = #{sysUserId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from timeblog.time_system_user where sys_user_id = #{sysUserId}
    </delete>

</mapper>